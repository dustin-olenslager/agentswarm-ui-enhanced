# AgentSwarm UI Configuration
# Copy this file to .env and fill in your values

# ===== LLM PROVIDER (Choose One) =====
# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# OpenRouter (Multi-provider)
OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Local/Custom LLM
LOCAL_LLM_BASE_URL=http://localhost:1234/v1
LOCAL_LLM_MODEL=local-model-name
LOCAL_LLM_API_KEY=not-needed

# ===== CLOUD WORKERS (Optional) =====
# Modal.com for serverless workers
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# ===== DASHBOARD SETTINGS =====
# Web Dashboard
DASHBOARD_HOST=localhost
DASHBOARD_PORT=3000
DASHBOARD_REFRESH_RATE=1000

# Terminal Dashboard
TERMINAL_DASHBOARD_ENABLED=true
TERMINAL_DASHBOARD_THEME=dark
TERMINAL_DASHBOARD_REFRESH_MS=500

# ===== PROJECT SETTINGS =====
# Default project directory
PROJECT_DIR=./generated-projects
MAX_PARALLEL_AGENTS=10
DEFAULT_TIMEOUT=300

# Git settings
GIT_USER_NAME=AgentSwarm
GIT_USER_EMAIL=agentswarm@example.com

# ===== LOGGING & MONITORING =====
LOG_LEVEL=INFO
LOG_FILE=./logs/agentswarm.log
TRACE_ENABLED=false

# Cost tracking
COST_TRACKING_ENABLED=true
COST_ALERTS_THRESHOLD=10.00

# ===== ADVANCED SETTINGS =====
# Experimental features
EXPERIMENTAL_FEATURES=false
DEBUG_MODE=false

# Performance tuning
WORKER_POOL_SIZE=5
MERGE_QUEUE_SIZE=10
RECONCILER_INTERVAL=30

# Security
SANDBOX_ENABLED=true
NETWORK_ISOLATION=true